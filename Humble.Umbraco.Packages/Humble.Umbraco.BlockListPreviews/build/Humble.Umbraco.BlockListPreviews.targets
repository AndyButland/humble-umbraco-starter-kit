<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <HumbleUmbracoRazorBlockPreviewsContentFilesPath>$(MSBuildThisFileDirectory)..\App_Plugins\Humble.Umbraco.BlockListPreviews\**\*.*</HumbleUmbracoRazorBlockPreviewsContentFilesPath>
    </PropertyGroup>

    <Target Name="CopyHumbleUmbracoRazorBlockPreviewsAssets" BeforeTargets="Build">
        <ItemGroup>
            <HumbleUmbracoRazorBlockPreviewsContentFiles Include="$(HumbleUmbracoRazorBlockPreviewsContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying Humble.Umbraco.BlockListPreviews files: $(HumbleUmbracoRazorBlockPreviewsContentFilesPath) - #@(HumbleUmbracoRazorBlockPreviewsContentFiles->Count()) files" Importance="high" />
        <Copy SourceFiles="@(HumbleUmbracoRazorBlockPreviewsContentFiles)" DestinationFiles="@(HumbleUmbracoRazorBlockPreviewsContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\Humble.Umbraco.BlockListPreviews\%(RecursiveDir)%(Filename)%(Extension)')" SkipUnchangedFiles="true" />
    </Target>
    
    <Target Name="ClearHumbleUmbracoRazorBlockPreviewsAssets" BeforeTargets="Clean">
        <ItemGroup>
            <HumbleUmbracoRazorBlockPreviewsDir Include="$(MSBuildProjectDirectory)\App_Plugins\Humble.Umbraco.BlockListPreviews\" />
        </ItemGroup>
        <Message Text="Clear old Humble.Umbraco.BlockListPreviews data" Importance="high" />
        <RemoveDir Directories="@(HumbleUmbracoRazorBlockPreviewsDir)" />
    </Target>
</Project>
