<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <MyPropertyEditorContentFilesPath>$(MSBuildThisFileDirectory)..\App_Plugins\Humble.Umbraco.PropertyEditor\**\*.*</MyPropertyEditorContentFilesPath>
    </PropertyGroup>

    <Target Name="CopyMyPropertyEditorAssets" BeforeTargets="Build">
        <ItemGroup>
            <MyPropertyEditorContentFiles Include="$(MyPropertyEditorContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying Humble.Umbraco.PropertyEditors files: $(MyPropertyEditorContentFilesPath) - #@(MyPropertyEditorContentFiles->Count()) files"  Importance="high" />
        <Copy
            SourceFiles="@(MyPropertyEditorContentFiles)"
            DestinationFiles="@(MyPropertyEditorContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\Humble.Umbraco.PropertyEditor\%(RecursiveDir)%(Filename)%(Extension)')"
            SkipUnchangedFiles="true" />

    </Target>

    <Target Name="ClearMyPropertyEditorAssets" BeforeTargets="Clean">
        <ItemGroup>
            <MyPropertyEditorDir Include="$(MSBuildProjectDirectory)\App_Plugins\Humble.Umbraco.PropertyEditor\" />
        </ItemGroup>
        <Message Text="Clear old Humble.Umbraco.PropertyEditors data"  Importance="high" />
        <RemoveDir Directories="@(MyPropertyEditorDir)"  />
    </Target>

</Project>
